@model IEnumerable<CourseProject.Models.Expense>

@{
    ViewBag.Title = "Поиск всех расходов за текущий месяц";
}

<h2>Поиск всех расходов за текущий месяц</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KindOfExpenses.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Summ)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KindOfExpenses.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summ)
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Назад к списку запросов", "Index")