@model IEnumerable<CourseProject.Models.Employee>

@{
    ViewBag.Title = "Поиск сотрудника по товарному чеку";
}

<h2>Поиск сотрудника по товарному чеку</h2>

@using (Html.BeginForm("EmployeeByExpense", "Requests", FormMethod.Get))
{
    <p>
        Поиск сотрудника по ID расхода: @Html.TextBox("id", ViewBag.CurrentFilter as string)
        <input type="submit" value="Поиск" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Department.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MiddleName)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
            </tr>
        }
    }

</table>

<div>
    @Html.ActionLink("Назад к списку запросов", "Index")
</div>
